<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="#FFFFFF"
    android:columnCount="8"
    android:rowCount="2">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_column="0"
        android:layout_row="0">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fragment_two_coins_two_euro"
            android:background="@drawable/two_euro"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="90dp"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_column="3"
        android:layout_row="0">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fragment_two_coins_one_euro"
            android:background="@drawable/one_euro"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_column="7"
        android:layout_row="0">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fragment_two_coins_fifty_cent"
            android:background="@drawable/fifty_cent"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_column="0"
        android:layout_row="1">

        <Button
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:id="@+id/fragment_two_coins_twenty_cent"
            android:background="@drawable/twenty_cent"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_column="3"
        android:layout_row="1">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fragment_two_coins_ten_cent"
            android:background="@drawable/ten_cent"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_column="7"
        android:layout_row="1">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fragment_two_coins_five_cent"
            android:background="@drawable/five_cent"
            android:scaleType="fitXY"/>
    </LinearLayout>

</GridLayout>
